<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ToggleButton
        android:id="@+id/buttonConnection"
        android:layout_width="377dp"
        android:layout_height="48dp"
        android:layout_marginTop="108dp"
        android:checked="false"
        android:text="ToggleButton"
        android:textOff="Connect"
        android:textOn="Disconnect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnOFF"
        android:layout_width="75"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="OFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnRED"
        app:layout_constraintHorizontal_bias="0.051"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonConnection"
        app:layout_constraintVertical_bias="0.119" />

    <Button
        android:id="@+id/btnRED"
        android:layout_width="75"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:text="RED"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnGREEN"
        app:layout_constraintTop_toBottomOf="@+id/buttonConnection"
        app:layout_constraintVertical_bias="0.119" />

    <Button
        android:id="@+id/btnBLUE"
        android:layout_width="75"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="BLUE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonConnection"
        app:layout_constraintVertical_bias="0.119" />

    <Button
        android:id="@+id/btnGREEN"
        android:layout_width="75"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:text="GREEN"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnBLUE"
        app:layout_constraintTop_toBottomOf="@+id/buttonConnection"
        app:layout_constraintVertical_bias="0.119" />

</androidx.constraintlayout.widget.ConstraintLayout>